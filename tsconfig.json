{
  "compilerOptions": {
    "target": "ES2017", // Good for modern JavaScript syntax
    "lib": ["dom", "dom.iterable", "esnext"], // Includes modern ES features and DOM typings
    "allowJs": true, // Allows JavaScript files in the project
    "skipLibCheck": true, // Skips type checking of declaration files for faster builds
    "strict": true, // Enables TypeScript strict mode for better type safety
    "noEmit": true, // Prevents emitting output files (important for Next.js)
    "incremental": true, // Speeds up subsequent builds by using incremental compilation
    "module": "esnext", // Supports ES modules
    "esModuleInterop": true, // Ensures compatibility with CommonJS modules
    "moduleResolution": "node", // Resolves modules in the Node.js style
    "resolveJsonModule": true, // Allows importing JSON files as modules
    "isolatedModules": true, // Required by Next.js for isolated file transpilation
    "jsx": "preserve", // Keeps JSX as is for Next.js to handle
    "baseUrl": ".", // Sets the root directory for module imports
    "paths": {
      "@/lib/*": ["lib/*"] // Supports alias for the lib directory
    },
    "plugins": [
      {
        "name": "next" // Ensures compatibility with Next.js
      }
    ]
  },
  "include": [
    "next-env.d.ts", // Includes Next.js TypeScript declarations
    ".next/types/**/*.ts", // Includes Next.js generated types
    "**/*.ts", // Includes TypeScript files
    "**/*.tsx" // Includes TypeScript JSX files
  ],
  "exclude": [
    "node_modules" // Excludes dependencies from type checking
  ]
}
